<div class="container">
  <div class="row">
  <div id="search" class="col-md-7 col-md-offset-2" style="text-align: center">
    <h1>dinder search</h1>
    <p>enter a custom location or click "search now" to let google find you</p>
    <input type="text" name="search" placeholder="enter location here" id="locationInput">
    <button id="search_now_Bttn" class="btn btn-primary">search now</button>
    <button class="btn btn-primary">random search</button>
    <div id="test"></div>
    <button id="advanced-button" class="btn btn-primary">additional filters</button>
  </div>


<div id="hide" class="col-md-5 col-md-offset-3" style="width: 50%; text-align: center; background: #bdbdbd;">
  <h4>additional filters</h4>

  <div class="form-group row">
    <label class="col-md-4 control-label" for="price">price range</label>
    <div class="col-md-2">
      <select id="price" name="price" class="form-control">
        <option value="1,2,3,4">--</option>
        <option value="1">$</option>
        <option value="2">$$</option>
        <option value="3">$$$</option>
        <option value="4">$$$$</option>
      </select>

    </div>

  <div class="form-group row">
    <label class="col-md-4 control-label" for="details">details</label>
    <div class="col-md-4">
    <input id="term" name="details" type="text" placeholder="keywords" class="form-control input-md">

    </div>

      <div class="form-group row" style="text-align: center">
      <label><input type="checkbox" name="terms">deal</label>
      <label><input type="checkbox" name="terms">open now</label>
      </div>

    <label class="col-md-4 control-label row" for="submit"></label>
    <div class="col-md-4">
      <button id="adv_search_btn" name="submit" class="btn btn-primary">advanced search</button>
      </div>
    </div>
  </div>
  </div>

<script>
var hide = function(evt) {
  $('#hide').toggleClass('hide');
};

$('#advanced-button').on('click', hide);

hide();
</script>
