<div class="container">
  <div class="col-md-7 col-md-offset-2" style="text-align: center">
    <h1>dinder search</h1>
    name: {{user.name}}<br>
    <input type="text" name="search" placeholder="location here" id="locationInput">
    <button id="searchBttn">search now</button>
    <button>random search</button>
    <a href="/auth/logout" title="">logout</a>
    <div id="test"></div>
    <button id="advanced-button">Additional Filters</button>
  </div>


<div id="hide" class="col-md-5 col-md-offset-3" style="text-align: center; background: #bdbdbd;">
  <h4>Additional Filters</h4>


  <div class="form-group row">
    <label class="col-md-4 control-label" for="radius">Search radius</label>
    <div class="col-md-4">
      <select id="radius" name="radius" class="form-control">
        <option value="800">.5 mile</option>
        <option value="1600">1 mile</option>
        <option value="3000">2 miles</option>
        <option value="8000">5 miles</option>
        <option value="16000">10 miles</option>
      </select>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-md-4 control-label" for="price">Price range</label>
    <div class="col-md-2">
      <select id="price" name="price" class="form-control">
        <option value="1">$</option>
        <option value="2">$$</option>
        <option value="3">$$$</option>
        <option value="4">$$$$</option>
      </select>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-md-4 control-label" for="details">Details</label>
    <div class="col-md-4">
    <input id="location" name="details" type="text" placeholder="Restaurant + Category" class="form-control input-md">
    </div>
  </div>

    <div class="form-group row" style="text-align: center">
    <label><input type="checkbox" name="terms">Deal</label>
    <label><input type="checkbox" name="terms">Open Now</label>
    </div>

    <label class="col-md-4 control-label row" for="submit"></label>
    <div class="col-md-4">
      <button id="submit" name="submit" class="btn btn-primary">Search</button>
    </div>

</div>

</div>

<script>
var hide = function(evt) {
  $('#hide').toggleClass('hide');
};

$('#advanced-button').on('click', hide);

hide();
</script>



