{{!-- {{/each}} --}}
  <ul style="list-style: none; padding-left: 0">
{{#each likes}}
    <li>
        <div id="{{id}}" class="card" style="width: 100%; background: #bdbdbd; border: 2px solid #654321; border-radius: 10px">
          <img class="card-img-top img-rounded" style="float: left; margin: 10px 10px 0 10px; width: 25%; display: inline-block" src="{{img_url}}" alt="yelp image">
          <div class="card-block">
            <h4 class="card-title"><a href="{{url}}">{{name}}</a></h4>
            <img style="margin: -10px 0 0 0" src="{{rating_img_url}}" alt="rating">
            {{review_count}}
            <p>207 Ord St<br>
            Los Angeles, CA 90012</p>
            <p>(213) 620-0461</p>
            <p class="card-text" style="margin: 20px 10px 10px 10px">{{snippet_text}}</div>
        </div>
    </li>
{{/each}}
  </ul>
</div>

